#!/usr/bin/env bash -e

# Configuration
export CF_DISTRIBUTION_ID_PRODUCTION=E3G7J0SFHE8NBG
export CF_DISTRIBUTION_ID_STAGING=E2YRWMYRH5E7WC
export REPO=0xcert/nonfungiblealliance-www.git
export DOMAIN_STAGING=staging.nonfungiblealliance.org
export DOMAIN_PRODUCTION=nonfungiblealliance.org

# Initialization
[[ "$1" = "production" ]] && ENV="production" || ENV="staging"
[[ "$ENV" = "production" ]] && export API_BASE_URL=https://api.0xcert.org || export API_BASE_URL=https://api-staging.0xcert.org

cd "$(dirname "${BASH_SOURCE[0]}")"
./deploy-cf-s3 $1